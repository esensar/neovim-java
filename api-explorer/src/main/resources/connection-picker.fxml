<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="349.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ensarsarajcic.neovim.java.explorer.ConnectionPickerController">
    <children>
        <Button fx:id="exploreBtn" layoutX="57.0" layoutY="38.0" mnemonicParsing="false"
                text="No connection (Just explore)"/>
        <Button fx:id="embedBtn" layoutX="99.0" layoutY="136.0" mnemonicParsing="false" text="Embed Neovim"/>
        <Button fx:id="connectBtn" layoutX="100.0" layoutY="248.0" mnemonicParsing="false" text="Connect to IP"/>
        <TextField fx:id="ipField" layoutX="67.0" layoutY="221.0" promptText="IP"/>
        <Button fx:id="connectFileBtn" layoutX="69.0" layoutY="302.0" mnemonicParsing="false"
                text="Connect to Unix Socket"/>
        <TextField fx:id="fileField" layoutX="67.0" layoutY="275.0" promptText="File"/>
    </children>
</AnchorPane>
